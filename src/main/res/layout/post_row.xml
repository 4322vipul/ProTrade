<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/postImageList"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/itemNameId"
            android:layout_width="180dp"
            android:layout_below="@+id/postImageList"
           android:layout_toRightOf="@+id/textView1"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="Item Name"/>
        <TextView
            android:id="@+id/itemPriceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView2"
            android:layout_below="@+id/itemNameId"
            android:padding="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="Item Price"/>
        <TextView
            android:id="@+id/itemDescId"
            android:layout_width="180dp"
           android:layout_toRightOf="@+id/textView3"
            android:layout_height="wrap_content"
            android:text="Item Description"
            android:layout_below="@+id/itemPriceId"
            android:scrollbars="vertical"
            android:textStyle="italic"
            android:textColor="#000000"
            android:padding="5dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/SellerNumberId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/itemDescId"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_below="@+id/postImageList"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignBottom="@+id/itemNameId"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text=" Item Name :"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/textView1"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_alignBottom="@+id/itemPriceId"
            android:text=" Item Price (â‚¹) :" />

        <TextView
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/itemDescId"
            android:layout_marginTop="7dp"
            android:text=" Description :" />

        <ImageView
            android:id="@+id/callButtonId"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="280dp"
            android:layout_below="@+id/textView4"
            app:srcCompat="@android:drawable/stat_sys_phone_call" />

        <ImageView
            android:id="@+id/messageButtonId"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="275dp"
            android:layout_below="@+id/callButtonId"
            app:srcCompat="@android:drawable/sym_action_email"
             />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/postImageList"
            android:text="Contacts"
            android:layout_marginLeft="280dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>