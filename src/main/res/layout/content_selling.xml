<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aimheadshot.buynsell.Activities.SellingActivity"
    tools:showIn="@layout/activity_selling">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/sellerPhoneNumberEditTextId"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="15dp"
            android:hint="Contact Number"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_outline"
            android:layout_centerHorizontal="true"
            android:inputType="number"
           android:layout_below="@+id/itemDescriptionEditTextId"/>

        <EditText
            android:id="@+id/itemDescriptionEditTextId"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:ems="10"
            android:padding="35dp"
            android:layout_marginTop="15dp"
            android:inputType="textPersonName"
            android:layout_centerHorizontal="true"
            android:hint="Item Description (Eg: 1 year old)"
            android:maxLines="3"
            android:text=""
            android:layout_below="@+id/itemNameEditTextId" />

        <Button
            android:id="@+id/submitToPostListButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true" />

        <EditText
            android:id="@+id/itemNameEditTextId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/edit_text_outline"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:hint="Name Of Item"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/itemPriceEditTextId"
            android:background="@drawable/edit_text_outline"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:ems="10"
            android:inputType="number"
            android:text=""
            android:hint="Price of Item"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_alignBaseline="@+id/itemNameEditTextId"
            android:layout_alignBottom="@+id/itemNameEditTextId"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/itemImageButtonId"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="false"
            android:layout_marginTop="2dp"
            android:cropToPadding="false"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/add_btn" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
